<?php 
//1.Ededin faktorialini hesablayan Class yazin//

class Factorial{
    public $number;
    public function __construct($num){
        $this->number=$num;
    }
    public function factorial(){
    	$fac=1;
    	for($i=1;$i<=$this->number;$i++){
    		$fac=$fac*$i;
    	}
    	return $fac;
    }
}

$factorial= new Factorial(4);
echo $factorial->factorial();

 ?>